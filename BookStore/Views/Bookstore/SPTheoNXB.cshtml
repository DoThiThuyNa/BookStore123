@model IEnumerable<BookStore.Models.SACH>
@{
    ViewBag.Title = "SPTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="text-align:center;color:red"> Sách theo nhà xuất bản </h3>
<div class="row">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach})"></a>
                <img alt="@sach.Tensach" src="~/img/@sach.Hinhminhhoa" width="150" />
                <div>

                    <h5 style="text-align:center">
                        @sach.Tensach
                    </h5>
                    <p></p>
                </div>
                <div class="rating">
                    <p class="pull-right">15 review</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star">
                        </span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
