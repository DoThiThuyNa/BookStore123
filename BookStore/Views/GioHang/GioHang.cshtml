@using BookStore.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Trang Chủ</a></li>
            <li class="active">Giỏ Hàng</li>
        </ul>
    </div>
</div>
<div class="main">
    <div class="container">
        <div class="cart">
               <div class="table-responsive">
                    <table class="table custom-table">
                        <thead>
                            <tr class="first last">
                                <th>Xóa</th>
                                <th>Hình</th>
                                <th>Tên Sản Phẳm</th>
                                <th>Cập nhật</th>
                                <th>Số Lượng</th>
                                <th>Giá Bán</th>
                                <th>Tổng Cộng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center"><a class="btn-remove" href="@Url.Action("XoaGiohang","GioHang",new { @Masach=item.iMaSach})"><span class="fa fa-trash-o"></span></a></td>
                                    <td>
                                        <a class="product-image" title="Primis in faucibus" href="#">
                                            <img src="~/img/@item.sHinhminhhoa" width="120" />
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#">@item.sTenSach</a>
                                        
                                    </td>
                                    @using (Html.BeginForm("CapnhatGiohang","GioHang",new { @iMaSach = item.iMaSach}))
                                    {
                                        <td class="qty">
                                            <input type="number" min="1" name="txtSoLuong" class="form-control" value="@item.iSoLuong">
                                        </td>
                                        <td class="subtotal">@item.dDongia</td>
                                        <td class="grandtotal">@item.iThanhTien</td>
                                        <td class="text-center"><input type="submit" class="form-control" value="Edit" /></td>
                                    }
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="@Url.Action("Index","Bookstore")" class="btn btn-default btn-md">Tiếp Tục Mua Hàng</a>
                    <button type="submit" class="btn btn-danger btn-md">Làm Mới</button>
                </div>
                <div class="line2"></div>
                <div class="row">
                    <div class="col-sm-4">
                        <h4>MÃ GIẢM GIÁ</h4>
                        <p class="text-muted">Nhập Mã Giảm Giá Của Bạn</p>
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-default btn-md">ÁP DỤNG</button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <table class="table table-cart-total">
                            <tr>
                                <td>Giảm Giá:</td>
                                <td class="text-right">0</td>
                            </tr>
                            <tr>
                                <td>Tổng Cộng:</td>
                                <td class="text-right">@ViewBag.Tongtien</td>
                            </tr>
                        </table>
                        <div class="text-right">
                            <p><button type="button" class="btn btn-default btn-md fwb">@Html.ActionLink("THANH TOÁN","Dathang","GioHang")</button></p>
                        </div>
                    </div>
                </div>
            
        </div>
    </div>
</div>

